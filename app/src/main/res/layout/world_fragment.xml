<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="characterWorld"
            type="com.example.coronaapp.viewModel.WorldVM" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/worldbackground">

        <TextView
            android:id="@+id/tv_affectedCountries"
            android:layout_width="250dp"
            android:layout_height="39dp"
            android:gravity="center"
            android:text="@{characterWorld.affCountriesLD}"
            android:textColor="#F44336"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView10"
            app:layout_constraintVertical_bias="0.175" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="250dp"
            android:layout_height="39dp"
            android:gravity="center"
            android:text="Affected countries"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_deaths" />

        <TextView
            android:id="@+id/tv_recover"
            android:layout_width="125dp"
            android:layout_height="28dp"
            android:gravity="center"
            android:text="@{characterWorld.recoverLD}"
            android:textColor="#31EC39"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.661"
            app:layout_constraintStart_toEndOf="@+id/tv_cases"
            app:layout_constraintTop_toBottomOf="@+id/textView9"
            app:layout_constraintVertical_bias="0.09" />

        <TextView
            android:id="@+id/tv_cases"
            android:layout_width="125dp"
            android:layout_height="28dp"
            android:gravity="center"
            android:text="@{characterWorld.casesLD}"
            android:textColor="#00BCD4"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.139"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView8"
            app:layout_constraintVertical_bias="0.09" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="125dp"
            android:layout_height="28dp"
            android:gravity="center"
            android:text="Recovered"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.661"
            app:layout_constraintStart_toEndOf="@+id/textView8"
            app:layout_constraintTop_toBottomOf="@+id/tv_deaths"
            app:layout_constraintVertical_bias="0.151" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="125dp"
            android:layout_height="28dp"
            android:gravity="center"
            android:text="Cases"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.139"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_deaths"
            app:layout_constraintVertical_bias="0.151" />

        <TextView
            android:id="@+id/tv_deaths"
            android:layout_width="108dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:text="@{characterWorld.deathsLD}"
            android:textColor="#F44336"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            app:layout_constraintVertical_bias="0.065" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="108dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:text="Deaths"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.12" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>