<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tips">

    <TextView
        android:id="@+id/textView12"
        android:layout_width="330dp"
        android:layout_height="171dp"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:text=" • High Temperature (87,9%) \n • Cough (67,7%) \n • Fatigue (38,1%) \n • Sputum (33,4%) \n • Shortness of breath (18,6%)"
        android:textColor="#FDFCFC"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="299dp"
        android:layout_height="40dp"
        android:layout_marginTop="64dp"
        android:gravity="center"
        android:text="First Symptoms"
        android:textColor="#FDFCFC"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="338dp"
        android:layout_height="101dp"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:text=" • Wash your hands \n • Sit at home \n • Keep distance from people"
        android:textColor="#FDFCFC"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="282dp"
        android:layout_height="32dp"
        android:layout_marginTop="68dp"
        android:gravity="center"
        android:text="Precautionary measures"
        android:textColor="#FDFCFC"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>