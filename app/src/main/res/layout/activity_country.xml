<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/countries">

    <TextView
        android:id="@+id/tv_activity_today"
        android:layout_width="125dp"
        android:layout_height="28dp"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:textColor="#F44336"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.538"
        app:layout_constraintStart_toEndOf="@+id/tv_activity_deaths"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/tv_activity_deaths"
        android:layout_width="101dp"
        android:layout_height="28dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:textColor="#F44336"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="125dp"
        android:layout_height="28dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="280dp"
        android:layout_marginEnd="38dp"
        android:gravity="center"
        android:text="Today"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/tv_activity_country" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="101dp"
        android:layout_height="28dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="280dp"
        android:gravity="center"
        android:text="Deaths"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_activity_country" />

    <TextView
        android:id="@+id/tv_activity_recover"
        android:layout_width="125dp"
        android:layout_height="28dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="38dp"
        android:gravity="center"
        android:textColor="#31EC39"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.784"
        app:layout_constraintStart_toEndOf="@+id/tv_activity_cases"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/tv_activity_cases"
        android:layout_width="101dp"
        android:layout_height="28dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:textColor="#00BCD4"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="125dp"
        android:layout_height="28dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="38dp"
        android:gravity="center"
        android:text="Recovered"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.362"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/tv_activity_country" />

    <TextView
        android:id="@+id/tv_activity_country"
        android:layout_width="107dp"
        android:layout_height="33dp"
        android:layout_marginTop="36dp"
        android:textColor="#FBFBFB"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="101dp"
        android:layout_height="28dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="84dp"
        android:gravity="center"
        android:text="Cases"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_activity_country" />
</androidx.constraintlayout.widget.ConstraintLayout>